<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="250.0" prefWidth="200.0">
         <children>
            <TextField fx:id="firstOperand" layoutX="26.0" layoutY="29.0" />
            <TextField fx:id="secondOperand" layoutX="26.0" layoutY="66.0" />
            <TextField fx:id="result" editable="false" layoutX="27.0" layoutY="211.0" />
            <GridPane layoutX="72.0" layoutY="108.0" prefHeight="60.0" prefWidth="58.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#calcSum" prefHeight="25.0" prefWidth="25.0" text="+" textAlignment="CENTER" />
                  <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#calcSub" prefHeight="25.0" prefWidth="25.0" text="-" GridPane.columnIndex="1" />
                  <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#calcMult" prefHeight="25.0" prefWidth="25.0" text="*" GridPane.rowIndex="1" />
                  <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#calcDiv" prefHeight="25.0" prefWidth="25.0" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <Label fx:id="err" layoutX="27.0" layoutY="183.0" prefHeight="17.0" prefWidth="149.0" textFill="RED" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
